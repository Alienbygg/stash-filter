# Advanced Configuration
# Full featured setup with all integrations

# Required - Stash server details
STASH_URL=http://192.168.1.100:9999
STASH_API_KEY=your-stash-api-key-here

# Required - Application security
SECRET_KEY=your-unique-secret-key-change-in-production

# Whisparr Integration (Optional)
WHISPARR_URL=http://192.168.1.100:6969
WHISPARR_API_KEY=your-whisparr-api-key-here
WHISPARR_QUALITY_PROFILE=HD
WHISPARR_ROOT_FOLDER=/downloads/adult

# StashDB Integration (Optional)
STASHDB_URL=https://stashdb.org
STASHDB_API_KEY=your-stashdb-api-key-here

# Application Settings
LOG_LEVEL=INFO
FLASK_ENV=production
DATABASE_PATH=/app/data/stash_filter.db
CONFIG_PATH=/app/data/config.json

# Discovery Configuration
DISCOVERY_ENABLED=true
DISCOVERY_FREQUENCY_HOURS=12
MAX_SCENES_PER_CHECK=50
AUTO_ADD_TO_WHISPARR=true

# Performance Tuning
CONCURRENT_REQUESTS=3
REQUEST_TIMEOUT=30
RETRY_FAILED_REQUESTS=true
RATE_LIMIT_DELAY=1

# Content Filtering
MIN_DURATION_MINUTES=15
MAX_DURATION_MINUTES=120
MIN_RATING=7.0

# Advanced Features
ENABLE_WEBHOOKS=false
WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
ENABLE_METRICS=true
METRICS_PORT=9090
