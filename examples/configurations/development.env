# Development Configuration
# Settings for local development and testing

# Stash server (use your local instance)
STASH_URL=http://localhost:9999
STASH_API_KEY=your-development-api-key

# Development security (weak key for dev only!)
SECRET_KEY=dev-secret-key-not-for-production

# Flask Development Settings
FLASK_ENV=development
FLASK_DEBUG=true
LOG_LEVEL=DEBUG

# Database (use memory for testing)
DATABASE_PATH=/app/data/dev_stash_filter.db

# Development Discovery Settings
DISCOVERY_FREQUENCY_HOURS=1
MAX_SCENES_PER_CHECK=10
AUTO_ADD_TO_WHISPARR=false

# Fast iteration settings
CONCURRENT_REQUESTS=1
REQUEST_TIMEOUT=10
RETRY_FAILED_REQUESTS=false

# Testing APIs (optional)
WHISPARR_URL=http://localhost:6969
WHISPARR_API_KEY=your-test-whisparr-key
STASHDB_API_KEY=your-test-stashdb-key

# Development Features
ENABLE_DEBUG_ENDPOINTS=true
MOCK_EXTERNAL_APIS=false
ENABLE_SQL_LOGGING=false
