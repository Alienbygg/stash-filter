<?xml version="1.0"?>
<Container version="2">
  <Name>stash-filter</Name>
  <Repository>alienbygg/stash-filter</Repository>
  <Registry>https://hub.docker.com/r/alienbygg/stash-filter</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/Alienbygg/stash-filter</Support>
  <Project>https://github.com/Alienbygg/stash-filter</Project>
  <Overview>
    Stash-Filter automatically discovers new scenes for your favorite performers and studios. Integrates with Stash, StashDB, and Whisparr for comprehensive content management.
    
